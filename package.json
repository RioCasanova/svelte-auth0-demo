{
	"name": "@dopry/svelte-auth0",
	"version": "0.1.1",
	"repository": "https://github.com/dopry/svelte-auth0",
	"description": "Svelte Auth0 Component Library",
	"keywords": [
		"svelte"
	],
	"license": "MIT",
	"main": "dist/index.min.js",
	"module": "dist/index.min.mjs",
	"scripts": {
		"build": "rollup -c",
		"cy:open": "cypress open",
		"cy:run": "cypress run",
		"dev": "rollup -c -w",
		"lint": "eslint --color --ignore-path .gitignore .",
		"prepublishOnly": "npm run build",
		"start": "sirv public",
		"test": "start-server-and-test dev http://localhost:5000 cy:run"
	},
	"browserslist": [
		"defaults"
	],

	"files": [
		"src",
		"dist"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{html, css, scss, stylus, js, ts, json, yml, md}": [
			"prettier --write",
			"git add"
		],
		"*.{js, svelte}": [
			"eslint --fix",
			"git add"
		]
	},


	"svelte": "src/components/components.module.js",
	"dependencies": {
		"@auth0/auth0-spa-js": "1.6.2"
	},
	"devDependencies": {
		"@testing-library/cypress": "5.0.2",
		"autoprefixer": "9.7.3",
		"cypress": "3.8.2",
		"eslint": "6.8.0",
		"eslint-config-prettier": "6.9.0",
		"eslint-plugin-cypress": "2.8.1",
		"eslint-plugin-svelte3": "2.7.3",
		"lint-staged": "9.5.0",
		"postcss": "7.0.26",
		"postcss-load-config": "2.1.0",
		"prettier": "1.19.1",
		"rollup": "1.29.0",
		"rollup-plugin-babel": "4.3.3",
		"rollup-plugin-commonjs": "10.1.0",
		"rollup-plugin-livereload": "1.0.4",
		"rollup-plugin-node-resolve": "5.2.0",
		"rollup-plugin-svelte": "5.1.1",
		"rollup-plugin-terser": "5.2.0",
		"sirv-cli": "0.4.5",
		"start-server-and-test": "1.10.6",
		"svelte": "3.16.7",
		"svelte-preprocess": "3.3.0"
	}
}
